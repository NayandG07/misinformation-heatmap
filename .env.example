# Environment Configuration Template
# Copy this file to .env and update with your values

# ============================================================================
# APPLICATION CONFIGURATION
# ============================================================================
MODE=local
ENVIRONMENT=development
LOG_LEVEL=INFO
API_PORT=8000
FRONTEND_PORT=3000

# Build configuration
BUILD_TARGET=development
VOLUME_MODE=rw

# ============================================================================
# GOOGLE CLOUD CONFIGURATION
# ============================================================================
GOOGLE_CLOUD_PROJECT=your-project-id
GOOGLE_APPLICATION_CREDENTIALS=/app/credentials.json
GOOGLE_APPLICATION_CREDENTIALS_FILE=./credentials.json

# BigQuery
BIGQUERY_DATASET=misinformation_heatmap
BIGQUERY_LOCATION=US

# Pub/Sub
PUBSUB_EMULATOR_HOST=pubsub-emulator:8085
PUBSUB_PORT=8085
PUBSUB_EVENTS_RAW_TOPIC=events-raw
PUBSUB_EVENTS_PROCESSED_TOPIC=events-processed
PUBSUB_EVENTS_VALIDATED_TOPIC=events-validated

# ============================================================================
# DATABASE CONFIGURATION
# ============================================================================
DATABASE_URL=sqlite:///./data/heatmap.db
DATABASE_TYPE=sqlite

# For production with PostgreSQL
# DATABASE_URL=postgresql://user:password@postgres:5432/misinformation_heatmap
# DATABASE_TYPE=postgresql

# ============================================================================
# EXTERNAL SERVICES
# ============================================================================
# HuggingFace (for NLP models)
HUGGINGFACE_TOKEN=your-huggingface-token

# IBM Watson Discovery (optional)
WATSON_DISCOVERY_API_KEY=your-watson-api-key

# ============================================================================
# SECURITY CONFIGURATION
# ============================================================================
API_KEY_ENABLED=false
API_KEYS=["your-api-key-1","your-api-key-2"]
CORS_ORIGINS=["http://localhost:3000","http://localhost:8000"]

# ============================================================================
# PERFORMANCE & CACHING
# ============================================================================
CACHE_TYPE=memory
CACHE_TTL=300
REDIS_PORT=6379

# For production with Redis
# CACHE_TYPE=redis
# REDIS_URL=redis://redis:6379/0

# Rate limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS_PER_MINUTE=100

# ============================================================================
# MONITORING & OBSERVABILITY
# ============================================================================
ENABLE_METRICS=true
ENABLE_TRACING=false
TRACING_SAMPLE_RATE=0.1

# Prometheus
PROMETHEUS_PORT=9090

# Grafana
GRAFANA_PORT=3001
GRAFANA_PASSWORD=admin

# ============================================================================
# DATA SOURCES CONFIGURATION
# ============================================================================
DATA_SOURCES_CONFIG_PATH=/app/config/data_sources.yaml

# ============================================================================
# SSL/TLS CONFIGURATION (Production)
# ============================================================================
SSL_CERT_PATH=./ssl/cert.pem
SSL_KEY_PATH=./ssl/key.pem

# ============================================================================
# STORAGE PATHS
# ============================================================================
DATA_PATH=./data
LOGS_PATH=./logs

# ============================================================================
# DOCKER COMPOSE PROFILES
# ============================================================================
# Uncomment the profiles you want to enable:
# COMPOSE_PROFILES=local,development
# COMPOSE_PROFILES=production,monitoring
# COMPOSE_PROFILES=testing
# COMPOSE_PROFILES=logging

# ============================================================================
# VERSION CONTROL
# ============================================================================
VERSION=latest