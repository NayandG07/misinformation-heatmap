# Real-time Misinformation Heatmap Configuration
# Copy this file to .env and configure for your deployment mode

# =============================================================================
# DEPLOYMENT MODE CONFIGURATION
# =============================================================================
# Set to "local" for development or "cloud" for production
MODE=local

# =============================================================================
# LOCAL MODE CONFIGURATION (MODE=local)
# =============================================================================
# No additional configuration required for local mode
# System will use SQLite, Pub/Sub emulator, and stub responses

# API Server Configuration
API_HOST=0.0.0.0
API_PORT=8000

# =============================================================================
# CLOUD MODE CONFIGURATION (MODE=cloud)
# =============================================================================
# Required for cloud deployment - uncomment and configure when MODE=cloud

# Google Cloud Platform Configuration
# GCP_PROJECT_ID=your-gcp-project-id
# GOOGLE_APPLICATION_CREDENTIALS=/path/to/service-account.json

# BigQuery Configuration
# BIGQUERY_DATASET=misinfo_heatmap
# BIGQUERY_TABLE=events

# Pub/Sub Configuration
# PUBSUB_TOPIC=misinfo-events
# PUBSUB_SUBSCRIPTION=misinfo-processor

# Google Earth Engine Configuration
# GEE_SERVICE_ACCOUNT=/path/to/gee-service-account.json
# SATELLITE_THRESHOLD=0.3

# IBM Watson Discovery Configuration
# WATSON_API_KEY=your-watson-api-key
# WATSON_URL=https://api.us-south.discovery.watson.cloud.ibm.com
# WATSON_VERSION=2019-04-30
# WATSON_ENVIRONMENT_ID=your-environment-id
# WATSON_COLLECTION_ID=your-collection-id

# =============================================================================
# OPTIONAL CONFIGURATION
# =============================================================================
# Logging Configuration
LOG_LEVEL=DEBUG

# NLP Model Configuration
NLP_MODEL_NAME=ai4bharat/indic-bert
NLP_BATCH_SIZE=16
NLP_MAX_LENGTH=512

# Hugging Face Authentication (required for IndicBERT)
# Get your token from: https://huggingface.co/settings/tokens
# HUGGINGFACE_TOKEN=your-hugging-face-token-here

# Performance Configuration
CACHE_TTL_SECONDS=3600
MAX_CONCURRENT_REQUESTS=100

# Security Configuration (for production)
# SECRET_KEY=your-secret-key-here
# ALLOWED_HOSTS=localhost,127.0.0.1,your-domain.com

# =============================================================================
# DEVELOPMENT CONFIGURATION
# =============================================================================
# Enable debug mode and detailed logging in local mode
DEBUG=true
RELOAD=true

# Test data configuration
ENABLE_TEST_ENDPOINTS=true
MOCK_DATA_ENABLED=true